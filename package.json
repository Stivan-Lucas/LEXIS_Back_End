{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend do projeto MyLists — API SaaS de to-do list, construída com Node.js 24, Fastify, TypeScript, PostgreSQL e Redis.",
  "keywords": [
    "fastify",
    "nodejs",
    "typescript",
    "todo-list",
    "backend",
    "postgresql",
    "redis",
    "SaaS",
    "api",
    "task-manager"
  ],
  "author": "Stivan Lucas C",
  "license": "MIT",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "prepare": "husky",
    "lint": "eslint --config eslint.config.js . --ext .ts",
    "lint:fix": "eslint --config eslint.config.js . --ext .ts --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "coverage": "c8 vitest run"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "homepage": "https://github.com/Stivan-Lucas/LEXIS_Back_End#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stivan-Lucas/LEXIS_Back_End.git"
  },
  "bugs": {
    "url": "https://github.com/Stivan-Lucas/LEXIS_Back_End/issues"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.5.1",
    "@prisma/client": "^6.13.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@scalar/fastify-api-reference": "^1.34.2",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.3",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@tsconfig/node-ts": "^23.6.1",
    "@tsconfig/node24": "^24.0.1",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "c8": "^10.1.3",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
